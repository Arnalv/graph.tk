#ifdef GL_ES
precision highp float;
#endif

#import javascript

varying vec2  MCposition;
uniform vec4 uColor;
uniform vec2 uSize;
void main() {
    
    float dx=uSize.x;
    float dy=uSize.y;
	if(f(MCposition.x,MCposition.y)){
        vec3 white = vec3(1.0,1.0,1.0);
        gl_FragColor=vec4(uColor.rgb*uColor.a + white*(1.0-uColor.a),0.97);
    }else if(
        f(MCposition.x+dx,MCposition.y) ||
        f(MCposition.x-dx,MCposition.y) ||
        f(MCposition.x,MCposition.y+dx) ||
        f(MCposition.x,MCposition.y-dx)
    ){
        gl_FragColor=vec4(uColor.rgb,1.0);
	}else{
		discard;
	}

}
